<div class="container">
    <div class="sidebar">
        <div class="logo-container">
            <img src="../../static/img/logo_ad.png" alt="Логотип" class="logo">
            <div class="logo-text">
                <p>AdHub</p>
            </div>
        </div>
        <div class="menu">
            <ul>
                <li>
                    <img src="../../static/img/free-icon-home-7941430_2.png" alt="Иконка главной">
                    <a href="#">Главная</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-front-end-6489421_2.png" alt="Иконка кампании">
                    <a href="#">Кампания</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-wallet-482541.png" alt="Иконка бюджета">
                    <a href="#">Бюджет</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-people-3633274.png" alt="Иконка аудитории">
                    <a href="#">Аудитория</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-cogwheel-6186867_2.png" alt="Иконка настроек">
                    <a href="#">Настройки</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-user-4743186.png" alt="Иконка профиля">
                    <a href="#">Профиль</a>
                </li>
                <li>
                    <img src="../../static/img/free-icon-notification-8860191.png" alt="Иконка уведомлений">
                    <a href="#">Уведомления</a>
                </li>
            </ul>
        </div>
    </div>
    <main class="main-content">
        <div class="container">
            <div class="lefted-box">
                <div class="adlayout">
                    {{#each userAds}}
                        <a href="#" id="{{ Id }}">
                        <div class="currentAdElContainer">
                            <div class="currentAdElInnerBox">
                                <div class="currentAdElTopDecoration"></div>
                                <div class="currentAdElInnerBackground"></div>
                            </div>
                            <div class="currentAdElDay">{{ Id }}</div>
                            <div class="currentAdElWeekday">Wed</div>
                            <div class="currentAdElTitle">{{ Name }}</div>
                            <div class="currentAdElSubtitle">{{ Sector }}</div>
                        </div>
                        </a>
                    {{/each}}
                        <a href="/createad"></a><button class="edit-button">Создать</button></a>


                    <div>

                    </div>
                </div>
            </div>

            <div class="centered-box">
                <div class="image-container">
                    <img src="../../static/img/image5.png" alt="Фото">
                </div>
                <div class="description">
                    <h2>Описание</h2>
                    <div class="text">
                        <p>{{ mainDescription }}</p>
                </div>
                <button class="edit-button">Изменить</button>   

            </div>
        </div>
    </main>
</div>