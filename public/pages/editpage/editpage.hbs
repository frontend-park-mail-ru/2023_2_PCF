<main class="editpage">
    <div class="editpage__container">
        <div class="centered-box">
        <div class="editpage__">
            <div class="editpage__left-block">
                <form id="createAd">
                    <div class="editpage__container xlarge">
                        <input type="text" class="text-input" placeholder="Заголовок" id="name" maxlength="32">
                    </div>
                    <div class="editpage__container xxlarge">
                        <input class="text-input" placeholder="Описание" id="description" maxlength="950">
                    </div>
                    <div class="editpage__container xlarge">
                        <input type="text" class="text-input" placeholder="Ссылка на сайт" id="website_link">
                    </div>
                    <div style="display: flex;">
                        <div class="editpage__container small">
                            <input type="text" class="text-input" placeholder="Бюджет" id="budget">
                        </div>
                        <div class="editpage__container medium">
                            <select type="text" class="text-input dropdown" placeholder="Аудитория" id="target_id">
                            </select>
                        </div>
                    </div>
                    <div class="editpage__flex-row">
                        <label class="editpage__button-container" for="file-upload">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <rect x="1" y="1" width="18" height="18" rx="6" stroke="white" stroke-width="2"/>
                                <line x1="3" y1="10" x2="17" y2="10" stroke="white" stroke-width="2"/>
                                <line x1="10" y1="3" x2="10" y2="17" stroke="white" stroke-width="2"/>
                            </svg>
                            <div class="editpage__button-text">Загрузить</div>
                            <input id="file-upload" type="file" style="display: none;" />
                        </label>
                        <div class="editpage__container large">
                            <input type="text" class="text-input" id="file-name-display" placeholder="Медиафайлы">
                        </div>
                    
                    </div>
                </form>
            </div>
            </div>
            <div class="editpage__box">
                <button class="editpage__action-box" id="submitBtn">
                    <div class="editpage__bold-label">Редактировать</div>
                </button>
                <button class="editpage__сancel-box" id="cancelBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="20" viewBox="0 0 21 20" fill="none">
                        <rect x="1.5" y="1" width="18" height="18" rx="6" stroke="white" stroke-width="2"/>
                        <line x1="3.5" y1="10" x2="17.5" y2="10" stroke="white" stroke-width="2"/>
                    </svg>
                    <div class="editpage__bold-label">Отменить</div>
                </button>
            </div>


                        <div class="editpage__right-block">
                <div class="editpage__label">Предпросмотр:</div>
                <label for="photoUpload" class="editpage__photo-upload-label">
                    <img class="editpage__gradient-box editpage__preview-image"></img>
                </label>
                <div class="editpage__label">Название:
                    <div class="editpage__preview-label-title">
                        <p class="editpage__preview-title"></p>
                    </div>
                </div>
                <div class="editpage__label">Описание:
                    <div class="editpage__preview-label-description">
                        <p class="editpage__preview-desription"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
