<main class="announcement">
  <div class="announcement__container">
    <div class="centered-box-announcement">
      <div class="announcement__">
        <div class="announcement__left-block">
          <form id="announcement">
            <div class="announcement__container xlarge">
              <input
                type="text"
                class="text-input"
                placeholder="Заголовок"
                id="name"
                maxlength="32"
              />
            </div>
            <div class="announcement__container xxlarge">
              <input
                class="text-input"
                placeholder="Описание"
                id="description"
                maxlength="950"
              />
            </div>
            <div class="announcement__container xlarge">
              <input
                type="text"
                class="text-input"
                placeholder="Ссылка на сайт"
                id="website_link"
              />
            </div>
            <div class="announcement__container xlarge">
              <input
                type="text"
                class="text-input"
                placeholder="Минимальная цена за клик"
                id="price"
              />
            </div>
            <div class="announcement__container xlarge">
              <select
                type="text"
                class="text-input dropdown"
                placeholder="Аудитория"
                id="target_id"
              >
              </select>
            </div>

          </form>

        </div>
        <div id="error-message">
        </div>
      </div>
      <div class="announcement__box">
        <div class="announcement__box">
          <button class="announcement__action-box" id="submitBtn">
            <div class="announcement__bold-label">Создать</div>
          </button>
          <a href="/profilead">

            <button class="announcement__сancel-box" id="cancelBtn">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="21"
                height="20"
                viewBox="0 0 21 20"
                fill="none"
              >
                <rect
                  x="1.5"
                  y="1"
                  width="18"
                  height="18"
                  rx="6"
                  stroke="white"
                  stroke-width="2"
                />
                <line
                  x1="3.5"
                  y1="10"
                  x2="17.5"
                  y2="10"
                  stroke="white"
                  stroke-width="2"
                />
              </svg>
              <div class="announcement__bold-label">Отменить</div>
            </button></a>
        </div>
      </div>

    </div>
  </div>
</main>