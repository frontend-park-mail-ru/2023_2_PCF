<main class="createad">
    <div class="createad__container">
        <div class="centered-box-createad">
        <div class="createad__">
            <div class="createad__left-block">
                <form id="createAd">
                    <div class="createad__container xlarge">
                        <input type="text" class="text-input" placeholder="Заголовок" id="name" maxlength="32">
                    </div>
                    <div class="createad__container xxlarge">
                        <textarea class="text-input" placeholder="Описание" id="description" maxlength="950"></textarea>
                    </div>
                    <div class="createad__container xlarge">
                        <input type="text" class="text-input" placeholder="Ссылка на сайт" id="website_link">
                    </div>
                    <div>
                        <div class="createad__container small">
                            <input type="text" class="text-input" placeholder="Бюджет" id="budget">
                        </div>
                        <div class="createad__container medium">
                            <select type="text" class="text-input dropdown" placeholder="Аудитория" id="target_id">
                            </select>
                        </div>
                    </div>
                    <div class="createad__flex-row">
                        
                        <div class="createad__container large">
                            <input type="text" class="text-input" id="file-name-display" placeholder="Медиафайлы">
                        </div>
<label class="createad__button-container" for="file-upload">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <rect x="1" y="1" width="18" height="18" rx="6" stroke="white" stroke-width="2"/>
                                <line x1="3" y1="10" x2="17" y2="10" stroke="white" stroke-width="2"/>
                                <line x1="10" y1="3" x2="10" y2="17" stroke="white" stroke-width="2"/>
                            </svg>
                            <div class="createad__button-text">Загрузить</div>
                            <input id="file-upload" type="file" style="display: none;" />
                        </label>
                    
                    </div>
                </form>
                        <div id="error-message">

        </div>
            </div>
            </div>
            <div class="createad__box">
                <button class="createad__action-box" id="submitBtn">
                    <div class="createad__bold-label">Создать</div>
                </button>
                <button class="createad__сancel-box" id="cancelBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="20" viewBox="0 0 21 20" fill="none">
                        <rect x="1.5" y="1" width="18" height="18" rx="6" stroke="white" stroke-width="2"/>
                        <line x1="3.5" y1="10" x2="17.5" y2="10" stroke="white" stroke-width="2"/>
                    </svg>
                    <div class="createad__bold-label">Отменить</div>
                </button>
            </div>


                        <div class="createad__right-block">
                <div class="createad__label">Предпросмотр:</div>
                <label for="photoUpload" class="createad__photo-upload-label">
                    <img class="createad__gradient-box createad__preview-image" src="../../static/img/img_placeholder.svg"></img>
                </label>
                <div class="createad__label">Название:
                    <div class="createad__preview-label-title">
                        <p class="createad__preview-title"></p>
                    </div>
                </div>
                <div class="createad__label">Описание:
                    <div class="createad__preview-label-description">
                        <p class="createad__preview-desription"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
